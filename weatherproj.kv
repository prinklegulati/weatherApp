WeatherClass:
<WeatherClass>:
    #orientation: 'horizontal'
    GridLayout:
        cols: 2
        rows: 2
        size_hint:1,.4
        pos_hint:{'right':1,'top':0.8}
        Label:
            text: "" if root.condition_descriptors is None else "%s"%(root.condition_descriptors)
            halign: 'left'
            valign: 'top'
            Image:
                source: '' if root.condition_icon is None else "%s"%(root.condition_icon)
                y:self.parent.y
                x:self.parent.x
                size: (self.parent.width/4,self.parent.height)
                allow_stretch: True
                keep_ratio: False
        Label
            text: '' if root.temperature_description is None else "%s"%(root.temperature_description)
            y:self.parent.y
            x:self.parent.x+self.parent.width/4
            size: (self.parent.width,self.parent.height)
            halign: 'left'
            valign: 'top'
        Button:
            text: '' if root.maximum_temperature is None else "%d"%(root.maximum_temperature)
            #disabled : True
            Label:
                color:(1,0,1)
                text: 'Maximum \n'
                text_size: self.size
                y:self.parent.y
                x:self.parent.x+self.parent.width/4
                size: (self.parent.width,self.parent.height)
                halign: 'left'
                valign: 'top'
            Image:
                source: './images/max.png'
                y:self.parent.y
                x:self.parent.x
                size: (self.parent.width/4,self.parent.height)
                allow_stretch: True
                keep_ratio: False
        Button:
